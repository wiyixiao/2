<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp">

    <!--连接模式弹窗-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorWhite">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color63"
            android:textSize="22sp"
            android:text="连接模式"
            android:padding="5dp"
            android:gravity="center"/>

        <RadioGroup
            android:id="@+id/conn_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <RadioButton
                android:id="@+id/blecon_rbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="蓝牙连接"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:checked="true"
                android:layout_weight="1"
                android:layout_marginBottom="10dp"
                android:drawablePadding="20dp"
                android:drawableRight="@mipmap/icon_blecon_32"/>

            <RadioButton
                android:id="@+id/otgcon_rbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OTG串口设备"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                android:drawablePadding="20dp"
                android:layout_marginBottom="10dp"
                android:drawableRight="@mipmap/icon_usbcon_32"/>

            <RadioButton
                android:id="@+id/usbcon_rbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="模拟器串口调试(5.0)"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                android:drawablePadding="20dp"
                android:drawableRight="@mipmap/icon_virtualdbg_32"/>

        </RadioGroup>

        <View
            android:id="@+id/dialog_notifly_line"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="#AAAAAA"
            app:layout_constraintTop_toBottomOf="@id/conn_radio_group" />

        <LinearLayout
            android:id="@+id/dialog_notifly_bottom"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/dialog_notifly_line">

            <TextView
                android:id="@+id/conn_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="取消"
                android:textSize="18sp" />

            <View
                android:layout_width="0.2dp"
                android:layout_height="match_parent"
                android:background="#AAAAAA" />

            <TextView
                android:id="@+id/conn_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="连接"
                android:textSize="18sp" />
        </LinearLayout>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>